<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edit Task Title"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_pick_due_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick Due Date"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button_pick_due_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick Due Time"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/text_due_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No due date set"
        android:textColor="#666"
        android:layout_marginTop="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_due_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No due time set"
        android:textColor="#666"
        android:layout_marginTop="4dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Task"
        android:layout_marginTop="16dp" />

</LinearLayout>
